<dropdown-button    {%- if id %} id="{{id}}"                 {%- endif -%}
                    {%- if modifier %} modifier="{{modifier}}"     {%- endif -%}
                    {%- if icon %} icon="{{icon}}"             {%- endif -%}
                    {%- if classes %} classes="{{classes}}"       {%- endif -%}>
    <text>{{text | default('Dropdown Button')}}</text>
    <list>
        {% for item in list -%}
        <item href="{{item.href}}">{{item.text}}</item>
        {% endfor %}
    </list>
</dropdown-button>
